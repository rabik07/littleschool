<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <h1 class="logo">Little Angle Academy School</h1>
            <ul class="nav-menu">
                <li><a href="/" class="nav-link">Home</a></li>
                <li><a href="/students" class="nav-link">Students</a></li>
                <li><a href="/teachers" class="nav-link">Teachers</a></li>
                <li><a href="/billing" class="nav-link">Billing</a></li>
                <li><a href="/history" class="nav-link">History</a></li>
            </ul>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <h2>History - Passout Students & Teachers</h2>
            </div>

            <div class="history-section">
                <div class="history-card">
                    <h3>Passout Students</h3>
                    <div style="overflow-x: auto;">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Roll Number</th>
                                <th>Name</th>
                                <th>Class</th>
                                <th>Email</th>
                                <th>Phone</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (passoutStudents.length === 0) { %>
                                <tr>
                                    <td colspan="5" class="text-center">No passout students found</td>
                                </tr>
                            <% } else { %>
                                <% passoutStudents.forEach(function(student) { %>
                                    <tr>
                                        <td><%= student.rollNumber %></td>
                                        <td><%= student.name %></td>
                                        <td><%= student.class %></td>
                                        <td><%= student.email %></td>
                                        <td><%= student.phone %></td>
                                    </tr>
                                <% }); %>
                            <% } %>
                        </tbody>
                    </table>
                    </div>
                </div>

                <div class="history-card">
                    <h3>Passout Teachers</h3>
                    <div style="overflow-x: auto;">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Subject</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Salary</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (passoutTeachers.length === 0) { %>
                                <tr>
                                    <td colspan="5" class="text-center">No passout teachers found</td>
                                </tr>
                            <% } else { %>
                                <% passoutTeachers.forEach(function(teacher) { %>
                                    <tr>
                                        <td><%= teacher.name %></td>
                                        <td><%= teacher.subject %></td>
                                        <td><%= teacher.email %></td>
                                        <td><%= teacher.phone %></td>
                                        <td>$<%= (parseFloat(teacher.salary) || 0).toFixed(2) %></td>
                                    </tr>
                                <% }); %>
                            <% } %>
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Little Angle Academy School. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
